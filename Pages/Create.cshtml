@page
@model Notes.Pages.CreateModel
@{
	ViewData["Title"] = "Create Note";
}

<h1 class="margin-title">Create Note</h1>

<form method="post">
	<div class="form-group">
		<label asp-for="Note.Title" class="mb-4 me-2"></label>
		<input asp-for="Note.Title"/>
		<span asp-validation-for="Note.Title"></span>
	</div>
	<div class="form-group">
		<label asp-for="Note.Content"></label>
		<textarea asp-for="Note.Content" class="form-control mb-4"></textarea>
		<span asp-validation-for="Note.Content" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary mb-3">Create</button>
</form>

