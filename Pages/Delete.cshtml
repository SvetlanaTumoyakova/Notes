@page
@model Notes.Pages.DeleteModel
@{
	ViewData["Title"] = "Delete Note";
}
<h3 class="margin-title alert-danger" >Are you sure you want to delete this note?</h3>
@if (Model.Note != null)
{
    <div>
        <h4 class="mb-3">@Model.Note.Title</h4>
        <p class="mb-5">@Model.Note.Content</p>
    </div>
}
else
{
    <p>Note not found.</p>
}

<form method="post">
    <input type="hidden" asp-for="Note.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
