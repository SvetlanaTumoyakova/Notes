@page
@model Notes.Pages.EditModel
@{
    ViewData["Title"] = "Edit Note";
}

<h1 class="margin-title">Edit Note</h1>

<form method="post">
    <div class="form-group">
        <input type="hidden" asp-for="Note.Id"/>
        <label asp-for="Note.Title" class="mb-1"></label>
        <input asp-for="Note.Title" class="form-control mb-3" />
        <span asp-validation-for="Note.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Note.Content" class="mb-1"></label>
        <textarea asp-for="Note.Content" class="form-control mb-4"></textarea>
        <span asp-validation-for="Note.Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mb-3">Save</button>
</form>

<a asp-page="Index" class="btn btn-primary">Back to List</a>