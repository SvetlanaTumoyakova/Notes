@page
@model Notes.Pages.IndexModel
@{
    ViewData["Title"] = "Notes List";
}

<h1>Notes</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Note</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model.Notes)
        {
            <tr>
                <td>@note.Title</td>
                <td>@note.Content</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@note.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@note.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>